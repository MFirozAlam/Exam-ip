<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/yourName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        android:textColor="#101010"
        android:textColorHint="#0E0E0E"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/parentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yourName"
        android:hint="Parent Name"
        android:textColor="#090909"
        android:textColorHint="#0E0E0E"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentName"
        android:hint="Enter Your Address"
        android:textColor="#0E0E0E"
        android:textColorHint="#1E1E1E"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:hint="Enter Your Mobile Number"
        android:inputType="phone"
        android:textColor="#0E0E0E"
        android:textColorHint="#151414"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/stream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile"
        android:hint="Stream"
        android:inputType="text"
        android:textColor="#131313"
        android:textColorHint="#090909"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stream"
        android:hint="DOB: "
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="#121111"
        android:textSize="25sp" />

    <RadioGroup
        android:id="@+id/chooseOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RadioButton
        android:id="@+id/radio_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        />
    <RadioButton
        android:id="@+id/radio_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parent"
        />
    <RadioButton
        android:id="@+id/radio_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher"
        />
    </RadioGroup>
    <Button
        android:id="@+id/submitButton"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Submit"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="GoogleSignOut"
        android:textSize="25dp" />


    
    </LinearLayout>